_arguments '(-s --source)'{-s,--source}'[the source DB (URL, path or - for stdin, default is -)]:location:_files' \
           '(-d --destination)'{-d,--destination}'[the destination DB (URL, path or - for stdout, default is -)]:location:_files' \
           '(-s --source -d --destination --help -V --version --numeric-version)--help[Display help message]' \
           '(-s --source -d --destination --help -V --version --numeric-version)'{-V,--version}'[Print version information]' \
           '(-s --source -d --destination --help -V --version --numeric-version)--numeric-version[Print just the version number]'
